<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:padding="12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/poster"
            android:src="@drawable/bigil"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@id/poster"
            android:text="Bigil"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/actor"
            android:layout_toRightOf="@id/poster"
            android:text="Joseph Vijay |  Nayanthara Kuria..."
            android:ellipsize="end"
            android:layout_toLeftOf="@id/book_button"
            android:layout_marginRight="16dp"
            android:maxLines="1"
            android:layout_below="@id/name"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actor"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/book_button"
            android:layout_toRightOf="@id/poster"
            android:text="Tamil"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:text="Book"
            android:textColor="@android:color/white"
            android:background="#e6cd17"
            android:id="@+id/book_button"
            android:layout_width="80dp"
            app:cornerRadius="4dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <com.google.android.material.button.MaterialButton
            android:layout_below="@id/lang"
            android:layout_width="48dp"
            android:layout_height="23dp"
            android:background="@android:color/white"
            android:text="2D"
            android:layout_marginLeft="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/type_button"
            android:textColor="@android:color/darker_gray"
            android:layout_toRightOf="@id/poster" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/screen_button"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:background="@android:color/white"
            android:text="U/A"
            android:layout_marginLeft="4dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@android:color/darker_gray"
            android:layout_toRightOf="@id/type_button"
            android:layout_below="@id/lang"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>